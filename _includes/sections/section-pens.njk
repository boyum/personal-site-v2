<section class="section" {%- if section.data.id -%} id="{{ section.data.id }}" {%- endif -%}>
    <div class="sidebar">
        <h1 class="sidebar-title">
            <span>
                {{ section.data.icon | safe }}
                {{ section.data.title }}
            </span>
        </h1>
    </div>
    <div class="section-body">
        <div class="container section-columns">
            <div class="section-intro">
                {{ section.data.content | safe }}
            </div>
            <div class="section-content">
                {% include "partials/penlist.njk" %}
            </div>
        </div>
    </div>
</section>